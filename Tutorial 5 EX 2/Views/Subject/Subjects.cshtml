@model IEnumerable<Tutorial_5_EX_2.Controllers.SubjectController.Subject>

@{
    ViewBag.Title = "Enrolled Subjects";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<div class="container-fluid">
    <!-- Full width container -->
    <h2 class="text-center my-4">Subjects You Are Enrolled In</h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <!-- Responsive table container -->
            <table class="table table-hover table-striped">
                <!-- Styled table -->
                <thead class="thead-dark">
                    <!-- Dark header -->
                    <tr>
                        <th>Subject ID</th>
                        <th>Subject Name</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subject in Model)
                    {
                        <tr>
                            <td>@subject.SubjectID</td>
                            <td>@subject.SubjectName</td>
                            <td>
                                @Html.ActionLink("View Details", "Detail", new { subjectID = subject.SubjectID }, new { @class = "btn btn-info" }) <!-- Styled button -->
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <!-- Alert for no subjects -->
            No subjects are currently enrolled.
        </div>
    }
</div>
<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5; 
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, .05); 
    }
</style>
